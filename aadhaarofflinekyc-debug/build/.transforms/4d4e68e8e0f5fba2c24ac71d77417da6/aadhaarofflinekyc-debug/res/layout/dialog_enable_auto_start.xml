<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_rectangle_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="11.8sp"
        android:text="@string/auto_start_permission_tutorial"
        android:textColor="#000000"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tutorial"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="1.9sp"
        android:padding="14dp"
        android:text="@string/settings"
        android:textAllCaps="true"
        android:textColor="@color/aok_colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tutorial"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@id/tv_settings"
        android:gravity="center_horizontal"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="1.9sp"
        android:padding="14dp"
        android:text="@string/proceed"
        android:textAllCaps="true"
        android:textColor="@color/aok_colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />
</RelativeLayout>



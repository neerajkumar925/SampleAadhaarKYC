<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />

            <gradient
                android:angle="-45"
                android:endColor="@color/aok_colorAccent"
                android:startColor="@color/aok_colorAccent"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="35dp"
                android:bottomRightRadius="35dp"
                android:topLeftRadius="35dp"
                android:topRightRadius="35dp" />
        </shape>
    </item>

</layer-list>